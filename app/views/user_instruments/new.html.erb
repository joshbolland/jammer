<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="instrument-form">
        <h1><center>Tell us what you play!</center></h1>
        <%= simple_form_for @user_instrument do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :instrument_id, collection: @available_instruments, label_method: :name, value_method: :id, label: "Instrument", include_blank: false %>
          </div>

          <div class="form-inputs">
            <%= f.input :ability, collection: [ '1', '2', '3', '4', '5'], include_blank: false %>
          </div>

          <div class="form-actions">
            <center><%= f.submit "Done!", class: "button" %></center>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
