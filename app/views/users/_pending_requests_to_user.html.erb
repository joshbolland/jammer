<% if @pending_requests.size > 0 && @hosted_jams.first.user == current_user %>
  <hr>
  <h3>Pending Requests</h3>
  <% @pending_requests.each do |request| %>
    <%= request.user.first_name %> <%= request.user.last_name %>| <%= request.message %><br>
    <%= link_to "Accept", request_path(request, status: "accepted"), method: :patch, class: "custom-file-upload" %> |
    <%= link_to "Decline", request_path(request, status: "declined"), method: :patch, class: "custom-file-upload" %><br><br>
  <% end %>
<% end %>