<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-3">
      <div class="new-request-form">
        <h4><center>You are now applying for <%= @slot.instrument.name %> @ <%= @slot.jam.title %></center></h4>
        <p>If you have any questions, leave a message for a host below:</p>
        <%= simple_form_for([@slot, @request]) do |f| %>
          <div class="form-inputs">
            <%= f.input :message %>
          </div>
          <div class="form-actions">
            <center><%= f.submit "Send Request", class: "button_primary" %></center>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

