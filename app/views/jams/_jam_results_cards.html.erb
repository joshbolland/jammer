<% @jams.each do |jam| %>
<div class="flex-card jam-card">
  <%= cl_image_tag jam.photo, height: 225, width: 225, gravity: "auto", crop:"fill", class: "jam-photo-clipped" %>
  <div class='jam-title'>
    <h1><%= jam.title %></h1>
  </div>
  <div class='datetime'>
    <p><i class="fa fa-calendar-alt"></i> <%= jam.date.strftime("%e %b %Y") %></p>
    <p><i class="far fa-clock"></i> <%= jam.time.strftime("%l:%M %p") %></p>
  </div>
  <div class='jam-slots'>
    <% jam.slots.each do |slot| %>
  <% if slot.instrument.name == 'Lead Guitar' %>
    <i class="flaticon-guitar"></i>
  <% elsif slot.instrument.name == 'Bass Guitar' %>
    <i class="flaticon-music"></i>
  <% elsif slot.instrument.name == 'Vocals' %>
    <i class="flaticon-speaker"></i>
  <% elsif slot.instrument.name == 'Drums' %>
    <i class="flaticon-drum"></i>
  <% elsif slot.instrument.name == 'Keys' %>
    <i class="flaticon-piano"></i>
  <% end  %>
<% end %>
  </div>
  <div class='jam-location'>
    <h3><%= jam.location %></h3>
  </div>
  <div class='jam-info'>
    <%= link_to 'More info', jam, class: "details-button jam-info" %>
  </div>
</div>
<% end %>
