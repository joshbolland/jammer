<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-3">
      <div class="new-jam-form">
        <h1><center>Edit Jam</center></h1>
        <%= simple_form_for @jam do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :title %>
            <%= f.input :location %>
            <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :time, as: :string, required: false, input_html: {class: "timepicker"} %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.input :description %>
          </div>
          <div class="form-actions">
            <center><%= f.submit "Update Jam", class: "button_primary" %></center><br>
          </div>
        <% end %>
        <center><%= link_to("Delete Jam", jam_path(@jam), method: :delete, class: "button_primary") %></center>
      </div>
    </div>
  </div>
</div>
