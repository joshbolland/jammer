<div class="flexbox-edit">
      <div class="new-jam-form">
        <h1><center>Edit Jam</center></h1>
        <%= simple_form_for @jam do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

           <div id="center-align-text">
            <div class="form-inputs-edit">
              <%= f.input :title, input_html: {class: "fancy-form"} %>
              <%= f.input :location, input_html: {class: "fancy-form"} %>
              <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker white-box"} %>
              <%= f.input :time, as: :string, required: false, input_html: {class: "timepicker white-box"} %>
              <%= f.input :photo, input_html: {id: "file-upload"}, label: "Upload Photo", label_html: {for: "file-upload", class: "custom-file-upload"}%>
              <%= f.input :photo_cache, as: :hidden %>
            </div>
              <%= f.input :description %>
            </div>


          <div class="update-button-position">
            <center<%= render 'shared/update_primary' %></center>
          </div>
          <div class="delete-button-position">
            <%= render 'shared/delete_button' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
